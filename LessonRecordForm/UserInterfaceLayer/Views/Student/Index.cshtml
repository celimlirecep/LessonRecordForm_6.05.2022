@model IEnumerable<EntityLayer.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-warning" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Student Name
            </th>
           
       
            <th>
                @Html.DisplayNameFor(model => model.StudentRecortDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentTerm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentRecortDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentTerm)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.StudentId">Edit</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.StudentId">Delete</a>|
                <a asp-action="Assign" class="btn btn-secondary" asp-route-id="@item.StudentId">Asign Lesson</a>

            </td>
        </tr>
}
    </tbody>
</table>
