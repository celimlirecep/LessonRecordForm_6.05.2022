@model IEnumerable<EntityLayer.Lesson>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-warning" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LessonImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LessonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LessonBos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LessonCredit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LessonTerm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <h1>@item.LessonImage</h1>
                <img src="@item.LessonImage" style="width:100px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LessonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LessonBos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LessonCredit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LessonTerm)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.LessonId">Edit</a> |

                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.LessonId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
