@model IEnumerable<EntityLayer.Department>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-warning" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentBoss)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentBoss)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.DepartmentId">Edit</a> |
              
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.DepartmentId">Delete</a> 

            




            </td>
        </tr>
}
    </tbody>
</table>
